<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Register_in_massage.AddMasseur"
             NavigationPage.HasNavigationBar="False">
    
    <NavigationPage.TitleView>
        <Label Text="Добавить массажера" FontSize="24" Margin="20,0"/>
    </NavigationPage.TitleView>

    <ContentPage.Content >
        <ScrollView>
            <StackLayout BackgroundColor="#D77B0B">
                <Label Text="Добавить массажёра" HorizontalOptions="Center" FontSize="32" Margin="40"></Label>
                <Frame Margin="40,40,40,30" CornerRadius="15" BorderColor="Black" BackgroundColor="Bisque"
                    Padding="5">
                    <Entry Text="{Binding Name}" x:Name="txt_AddName" Placeholder="Имя" PlaceholderColor="Gray" TextColor="Black" />
                </Frame>

                <Frame Margin="40,0,40,30" CornerRadius="15" BorderColor="Black" BackgroundColor="Bisque"
                   Padding="5">
                    <Entry Text="{Binding SecName}" x:Name="txt_AddSecName" Placeholder="Фамилия" PlaceholderColor="Gray" TextColor="Black" />
                </Frame>

                <Frame Margin="40,0,40,30" CornerRadius="15" BorderColor="Black" BackgroundColor="Bisque"
                   Padding="5">
                    <Entry Text="{Binding WorkExperience}" x:Name="txt_AddWork" Placeholder="Опыт работы" PlaceholderColor="Gray" TextColor="Black" />
                </Frame>

                <Frame Margin="40,0,40,30" CornerRadius="15" BorderColor="Black" BackgroundColor="Bisque"
                   Padding="5">
                    <Entry Text="{Binding Number}" x:Name="txt_AddNum" Placeholder="Номер телефона" PlaceholderColor="Gray" TextColor="Black" />
                </Frame>

                <StackLayout Orientation="Horizontal" HorizontalOptions="Center"  Padding="0,30,0,0">
                    <Button BackgroundColor="Bisque" BorderColor="Black" BorderWidth="1" TextColor="Black" CornerRadius="50" FontSize="11" Text="Добавить" Clicked="ButtonAdd_Clicked"/>
                    <Button BackgroundColor="Bisque" BorderColor="Black" BorderWidth="1" TextColor="Black" CornerRadius="50" FontSize="11" Text="Отмена" Clicked="Cancel" />
                </StackLayout>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>