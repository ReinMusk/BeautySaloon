<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Register_in_massage.AuthorPage">

    <StackLayout>

        <StackLayout>
            <StackLayout Margin="40,0,40,40">
                <Frame
                    Padding="0">
                    <Entry FontSize="16" x:Name="author_txt_login" BackgroundColor="#E8E8E8" TextColor="Black" Placeholder="Логин"/>
                </Frame>
            </StackLayout>
            <StackLayout Margin="40,0,40,40">
                <Frame
                    Padding="0">
                    <Entry FontSize="16" x:Name="author_txt_password" BackgroundColor="#E8E8E8" IsPassword ="True" Placeholder="Пароль" TextColor="Black"/>
                </Frame>
            </StackLayout>
        </StackLayout>
        <StackLayout Orientation="Horizontal" HorizontalOptions="Center" FlexLayout.AlignSelf="Start">
            <Button CornerRadius="50" FontSize="11" Text="Зарегистрироваться" Clicked="Button_Registr_Clicked" BackgroundColor="#00B2FF"/>
            <Button CornerRadius="50" FontSize="11" Text="Войти" Clicked="Button_Login_Clicked" BackgroundColor="#00B2FF"/>
        </StackLayout>

    </StackLayout>
</ContentPage>