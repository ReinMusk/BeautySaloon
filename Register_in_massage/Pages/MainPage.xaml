<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Register_in_massage.MainPage"
             NavigationPage.HasNavigationBar="False">

    <StackLayout BackgroundColor="White">

        <StackLayout>
            <Image Source="logo.png" Margin="30, 50"/>

            <StackLayout Margin="40,0,40,40">
                <Label TextColor="Black" FontFamily="SourceCodePro-Medium" Text="Территория красоты" FontSize="24" HorizontalOptions="Center"/>
            </StackLayout>

            <StackLayout Margin="40,0,40,25">
                <Label TextColor="Gray" FontFamily="SourceCodePro-Medium" Text="Лучшие салоны красоты Казани. Салоны красоты предлагают большой выбор процедур: для красоты волос и ногтей, для ухода за лицом и телом, избавление от лишнего веса, восстановление красоты и молодости кожи." HorizontalOptions="Center"/>
            </StackLayout>

        </StackLayout>
        <StackLayout Orientation="Horizontal" HorizontalOptions="Center" FlexLayout.AlignSelf="Start">
            <Button Padding="20" FontFamily="SourceCodePro-Medium" CornerRadius="50" Margin="10" FontSize="17" Text="Продолжить" Clicked="ContinueButton_Clicked" BackgroundColor="#D77B0B"/>
        </StackLayout>
        
    </StackLayout>

</ContentPage>
