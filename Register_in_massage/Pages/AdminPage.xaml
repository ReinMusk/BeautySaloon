<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Register_in_massage.Pages.AdminPage"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content >
        <ScrollView>
            <StackLayout BackgroundColor="#D77B0B">
                <Label x:Name="label_title" Text="Панель администратора" VerticalTextAlignment="Center" HorizontalTextAlignment="Center" FontSize="32" Margin="40" TextColor="White"></Label>

                <Frame Padding="0" BorderColor="Black" CornerRadius="15" Margin="40, 380, 40, 20">
                    <Button FontFamily="SourceCodePro-Medium" Text="Список салонов" TextColor="Black" FontSize="18" BorderColor="Black" CornerRadius="15" BorderWidth="2" BackgroundColor="White" Clicked="showList"></Button>
                </Frame>

                <Frame Padding="0" BorderColor="Black" CornerRadius="15" Margin="40, 30">
                    <Button FontFamily="SourceCodePro-Medium" Text="Добавить салон" TextColor="Black" FontSize="18" BorderColor="Black" CornerRadius="15" BorderWidth="2" BackgroundColor="White" Clicked="addSaloon"></Button>
                </Frame>

            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>